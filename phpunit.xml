<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
  bootstrap="tests/bootstrap.php"
  colors="true"
  cacheDirectory=".phpunit.cache"
  failOnWarning="false"
>

  <!-- ============================= -->
  <!-- Test Suites Configuration     -->
  <!-- ============================= -->
  <testsuites>

    <!-- Core Tests: framework, helpers, utilities, etc. -->
    <testsuite name="Core Tests">
      <directory>tests</directory>
    </testsuite>

    <!-- Module Tests: all module-specific tests in modules/<Vendor>/<Module>/Tests -->
    <testsuite name="Module Tests">
      <directory>modules/*/*/Tests</directory>
    </testsuite>

  </testsuites>

  <!-- ============================= -->
  <!-- Source Code Coverage         -->
  <!-- ============================= -->
  <source>
    <!-- Include directories for code coverage analysis -->
    <include>
      <directory>core</directory>
      <directory>src</directory>
      <directory>modules</directory>
    </include>
  </source>

  <!-- ============================= -->
  <!-- Environment Variables        -->
  <!-- ============================= -->
  <php>
    <!-- Set the application environment to 'testing' during PHPUnit runs -->
    <env name="APP_ENV" value="testing"/>
  </php>

</phpunit>
